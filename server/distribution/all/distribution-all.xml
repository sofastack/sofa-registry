<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>registry-all</id>
    <includeBaseDirectory>true</includeBaseDirectory>
    <formats>
        <format>dir</format>
        <format>tgz</format>
    </formats>
    <fileSets>
        <fileSet>
            <includes>
                <include>conf/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <includes>
                <include>bin/**</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../../../create_table.sql</source>
            <outputDirectory>./</outputDirectory>
            <destName>create_table.sql</destName>
        </file>
        <file>
            <source>../../server/meta/target/registry-server-meta-executable.jar</source>
            <outputDirectory>./</outputDirectory>
            <destName>registry-meta.jar</destName>
        </file>
        <file>
            <source>../../server/meta/src/main/resources/log4j2.xml</source>
            <outputDirectory>./log-conf/meta</outputDirectory>
            <destName>log4j2.xml</destName>
        </file>
        <file>
            <source>../../server/data/target/registry-server-data-executable.jar</source>
            <outputDirectory>./</outputDirectory>
            <destName>registry-data.jar</destName>
        </file>
        <file>
            <source>../../server/data/src/main/resources/log4j2.xml</source>
            <outputDirectory>./log-conf/data</outputDirectory>
            <destName>log4j2.xml</destName>
        </file>
        <file>
            <source>../../server/session/target/registry-server-session-executable.jar</source>
            <outputDirectory>./</outputDirectory>
            <destName>registry-session.jar</destName>
        </file>
        <file>
            <source>../../server/session/src/main/resources/log4j2.xml</source>
            <outputDirectory>./log-conf/session</outputDirectory>
            <destName>log4j2.xml</destName>
        </file>
        <file>
            <source>../../server/integration/target/registry-server-integration-executable.jar</source>
            <outputDirectory>./</outputDirectory>
            <destName>registry-integration.jar</destName>
        </file>
        <file>
            <source>../../server/integration/src/main/resources/log4j2.xml</source>
            <outputDirectory>./log-conf/integration</outputDirectory>
            <destName>log4j2.xml</destName>
        </file>
    </files>

    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.alipay.sofa:registry-server-meta</include>
                <include>com.alipay.sofa:registry-server-data</include>
                <include>com.alipay.sofa:registry-server-session</include>
                <include>com.alipay.sofa:registry-server-integration</include>
            </includes>
        </moduleSet>
    </moduleSets>
</assembly>
